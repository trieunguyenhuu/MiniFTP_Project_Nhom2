<Window x:Class="MiniFTPClient_WPF.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MiniFTPClient_WPF"
        Title="LOGIN" Height="650" Width="1000"
        Loaded="Window_Loaded">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="#002241" Offset="0.0"/>
            <GradientStop Color="#006CA8" Offset="0.5"/>
            <GradientStop Color="#4DBBFF" Offset="0.75"/>
            <GradientStop Color="#9FE6FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>


    <Window.Resources>

        <Style x:Key="LoginBorderStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.25"/>
                </Setter.Value>
            </Setter>

            <Setter Property="CornerRadius" Value="18"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18"
                              ShadowDepth="3"
                              Opacity="0.25"
                              Color="Black"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Padding" Value="30"/>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>


        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFF9F9F9"/>
            <Setter Property="BorderBrush" Value="#CDD3D8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="border"
                            CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                              ShadowDepth="2"
                                              Opacity="0.25"
                                              Color="Black"/>
                                </Border.Effect>
                            </Border>

                            <TextBlock x:Name="Placeholder"
                               Margin="10,0,10,0"
                               VerticalAlignment="Center"
                               Foreground="#999"
                               Text="{TemplateBinding Tag}"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>

                            <!-- Nội dung text -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="10,0,10,0"
                                  VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Trigger -->
                        <ControlTemplate.Triggers>
                            <!-- Ẩn placeholder khi có text -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>

                            <!-- Khi có text -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Khi người dùng nhập -->
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Khi focus: chỉ đổi màu viền, KHÔNG đổi BorderThickness -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3498db"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E90FF" Offset="0.0"/>
                        <GradientStop Color="#1877CE" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                              ShadowDepth="2"
                              Color="#80000000"
                              Opacity="0.15"/>
                </Setter.Value>
            </Setter>

            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#43A5FF" Offset="0.0"/>
                                            <GradientStop Color="#1C82D4" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="btnBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.01" ScaleY="1.01"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Press -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1464A8" Offset="0.0"/>
                                            <GradientStop Color="#0E4C7F" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="btnBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ClickableTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B4F0FF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>

            <Style.Triggers>
                <!-- Hover effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D0F6FF"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border CornerRadius="8"
            Margin="20"
            Padding="5">

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#002241" Offset="0.0"/>
                <GradientStop Color="#006CA8" Offset="0.5"/>
                <GradientStop Color="#4DBBFF" Offset="0.75"/>
                <GradientStop Color="#9FE6FF" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Video bên trái -->
            <Grid Grid.Column="0" x:Name="VideoHost" Background="Transparent" SizeChanged="VideoHost_SizeChanged">

                <Grid.Clip>
                    <RectangleGeometry x:Name="videoClip"
                           RadiusX="25"
                           RadiusY="25"/>
                </Grid.Clip>

                <MediaElement x:Name="myVideo"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Stop"
                  Stretch="UniformToFill"
                  StretchDirection="Both"
                  Volume="0"
                  MediaEnded="myVideo_MediaEnded" />
            </Grid>

            <!-- Form đăng nhập -->
            <Grid Grid.Column="1" Background="Transparent">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="LoginFormBorder"
                            Grid.Row="1"
                            Style="{StaticResource LoginBorderStyle}"
                            Width="320"
                            Padding="30">

                        <StackPanel>

                            <TextBlock Text="ĐĂNG NHẬP MINIFTP"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Tên đăng nhập"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,15,0,5"/>

                            <Border Background="#F8FAFC" CornerRadius="10" Padding="10,6" VerticalAlignment="Center" HorizontalAlignment="Left" Width="256">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="1"  x:Name="AccountBox"  Background="Transparent"  BorderThickness="0" Padding="2" VerticalAlignment="Center" FontSize="14" Foreground="#1F2937" Text="" MinWidth="200"  Cursor="IBeam" HorizontalAlignment="Stretch" TextChanged="AccountBox_TextChanged"/>
                                    <TextBlock Grid.Column="1" x:Name="AccountPlaceholder" Text=" Nhập tên đăng nhập" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Mật khẩu"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,15,0,5"/>

                            <Border Background="#F8FAFC"
                                    CornerRadius="10"
                                    Padding="10,6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Width="256"
                                    BorderBrush="#CDD3D8"
                                    BorderThickness="1">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <PasswordBox x:Name="PassPasswordBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 PasswordChanged="PassPasswordBox_PasswordChanged"/>

                                    <!-- TextBox: chỉ để HIỆN chữ khi bật "mắt" -->
                                    <TextBox x:Name="PassVisibleBox"
                                             Grid.Column="0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="14"
                                             Padding="2"
                                             VerticalAlignment="Center"
                                             Foreground="#1F2937"
                                             Visibility="Collapsed"
                                             TextChanged="PassVisibleBox_TextChanged"/>

                                    <TextBlock x:Name="PassPlaceholder"
                                               Grid.Column="0"
                                               Text=" Nhập mật khẩu"
                                               FontSize="14"
                                               Foreground="#6B7280"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False"/>

                                    <Image x:Name="PassEyeIcon"
                                           Grid.Column="1"
                                           Source="/anh/eyeclose.png"
                                           Width="20" Height="20"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="PassEyeIcon_MouseLeftButtonUp"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Quên mật khẩu?"
                                       FontSize="15"
                                       Margin="0,5,0,15"
                                       Style="{StaticResource ClickableTextStyle}"
                                       MouseLeftButtonUp="ForgotPassword_Click"
                                       HorizontalAlignment="Right"/>


                            <Button x:Name="BtnLogin"
                                    Click="BtnLogin_Click"
                                    Content="KẾT NỐI FTP"
                                    FontWeight="SemiBold"
                                    IsDefault="True"
                                    Style="{StaticResource LoginButtonStyle}"/>

                        </StackPanel>
                    </Border>

                    <Border x:Name="ForgotFormBorder"
                            Grid.Row="0"
                            Style="{StaticResource LoginBorderStyle}"
                            Width="320"
                            Padding="30"
                            Visibility="Collapsed">

                        <StackPanel>
                            <TextBlock Text="KHÔI PHỤC MẬT KHẨU"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <TextBlock Text="Nhập email"
                                       Foreground="#ffffff"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <Border Background="#F8FAFC" Margin="0,5,0,20" CornerRadius="10" Padding="10,6" VerticalAlignment="Center" HorizontalAlignment="Left" Width="256">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="1"  x:Name="EmailBox"  Background="Transparent"  BorderThickness="0" Padding="2" VerticalAlignment="Center" FontSize="14" Foreground="#1F2937" Text="" MinWidth="200"  Cursor="IBeam" HorizontalAlignment="Stretch" TextChanged="EmailBox_TextChanged"/>
                                    <TextBlock Grid.Column="1" x:Name="EmailPlaceholder" Text=" Nhập email của bạn" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>

                            <Button Content="GỬI MÃ XÁC NHẬN"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource LoginButtonStyle}"
                                    Click="SendCode_Click"/>

                            <TextBlock Text="Quay lại đăng nhập"
                                       FontSize="15"
                                       Margin="0,15,0,0"
                                       Style="{StaticResource ClickableTextStyle}"
                                       MouseLeftButtonUp="BackToLogin_Click"
                                       HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Border>

                    <Border x:Name="ChangePasswordBorder"
                            Style="{StaticResource LoginBorderStyle}"
                            Width="320"
                            Visibility="Collapsed">

                        <StackPanel>
                            <TextBlock Text="ĐỔI MẬT KHẨU"
                                       FontSize="22" FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Mã xác nhận"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <Border Background="#F8FAFC" Margin="0,5,0,15" CornerRadius="10" Padding="10,6" VerticalAlignment="Center" HorizontalAlignment="Left" Width="256">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="1"  x:Name="CodeBox"  Background="Transparent"  BorderThickness="0" Padding="2" VerticalAlignment="Center" FontSize="14" Foreground="#1F2937" Text="" MinWidth="200"  Cursor="IBeam" HorizontalAlignment="Stretch" TextChanged="CodeBox_TextChanged"/>
                                    <TextBlock Grid.Column="1" x:Name="CodePlaceholder" Text=" Nhập mã vừa nhận" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Mật khẩu mới"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <Border Background="#F8FAFC"
                                    CornerRadius="10"
                                    Padding="10,6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Width="256"
                                    BorderBrush="#CDD3D8"
                                    BorderThickness="1"
                                    Margin="0,5,0,10">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- PasswordBox nhập thật -->
                                    <PasswordBox x:Name="NewPassPasswordBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 PasswordChanged="NewPassPasswordBox_PasswordChanged"/>

                                    <!-- TextBox hiển thị khi bật mắt -->
                                    <TextBox x:Name="NewPassVisibleBox"
                                             Grid.Column="0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="14"
                                             Padding="2"
                                             VerticalAlignment="Center"
                                             Foreground="#1F2937"
                                             Visibility="Collapsed"
                                             TextChanged="NewPassVisibleBox_TextChanged"/>

                                    <!-- Placeholder -->
                                    <TextBlock x:Name="NewPassPlaceholder"
                                               Grid.Column="0"
                                               Text=" Nhập mật khẩu mới"
                                               FontSize="14"
                                               Foreground="#6B7280"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False"/>

                                    <!-- Icon mắt -->
                                    <Image x:Name="NewPassEyeIcon"
                                           Grid.Column="1"
                                           Source="/anh/eyeclose.png"
                                           Width="20" Height="20"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="NewPassEyeIcon_MouseLeftButtonUp"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Xác nhận mật khẩu"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>

                            <Border Background="#F8FAFC"
                                    CornerRadius="10"
                                    Padding="10,6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Width="256"
                                    BorderBrush="#CDD3D8"
                                    BorderThickness="1"
                                    Margin="0,5,0,20">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- PasswordBox nhập thật -->
                                    <PasswordBox x:Name="ConfirmPassPasswordBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 PasswordChanged="ConfirmPassPasswordBox_PasswordChanged"/>

                                    <!-- TextBox hiển thị khi bật mắt -->
                                    <TextBox x:Name="ConfirmPassVisibleBox"
                                             Grid.Column="0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="14"
                                             Padding="2"
                                             VerticalAlignment="Center"
                                             Foreground="#1F2937"
                                             Visibility="Collapsed"
                                             TextChanged="ConfirmPassVisibleBox_TextChanged"/>

                                    <!-- Placeholder -->
                                    <TextBlock x:Name="ConfirmPassPlaceholder"
                                               Grid.Column="0"
                                               Text=" Nhập lại mật khẩu"
                                               FontSize="14"
                                               Foreground="#6B7280"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False"/>

                                    <!-- Icon mắt -->
                                    <Image x:Name="ConfirmPassEyeIcon"
                                           Grid.Column="1"
                                           Source="/anh/eyeclose.png"
                                           Width="20" Height="20"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           Cursor="Hand"
                                           MouseLeftButtonUp="ConfirmPassEyeIcon_MouseLeftButtonUp"/>
                                </Grid>
                            </Border>

                            <Button x:Name="btnChangePassword"
                                    Content="ĐỔI MẬT KHẨU"
                                    Style="{StaticResource LoginButtonStyle}"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,10"/>

                            <TextBlock Text="Quay lại đăng nhập"
                                       FontSize="15"
                                       Margin="0,10,0,0"
                                       Style="{StaticResource ClickableTextStyle}"
                                       MouseLeftButtonUp="BackToLogin_Click"
                                       HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
