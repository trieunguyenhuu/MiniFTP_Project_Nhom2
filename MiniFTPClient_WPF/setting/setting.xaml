<Page x:Class="MiniFTPClient_WPF.setting.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="1100"
      Title="setting">

    <Page.Resources>

        <!-- Converter: dùng để ẩn/hiện panel theo IsChecked -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Card trắng bo góc + shadow nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="24"
                                      ShadowDepth="4"
                                      Opacity="0.18"
                                      Color="#55000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TAB CHỮ HIỆN ĐẠI, GẠCH CHÂN DÀI BẰNG CHỮ -->
        <Style x:Key="TabTextStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent"
                        Padding="0,4,0,4">
                            <StackPanel>
                                <!-- CHỮ -->
                                <TextBlock x:Name="txt"
                                   Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextTrimming="CharacterEllipsis"/>

                                <!-- GẠCH CHÂN: RỘNG = CHỮ -->
                                <Border x:Name="underline"
                                Height="2"
                                Margin="0,4,0,0"
                                CornerRadius="1"
                                Background="#2563EB"
                                Opacity="0"
                                HorizontalAlignment="Left"
                                Width="{Binding ActualWidth, ElementName=txt}"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover: chữ đậm hơn, gạch mờ -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#111827"/>
                                <Setter TargetName="txt"
                                Property="FontWeight"
                                Value="SemiBold"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="0.35"/>
                            </Trigger>

                            <!-- Được chọn: chữ xanh + gạch chân rõ -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#2563EB"/>
                                <Setter TargetName="txt"
                                Property="FontWeight"
                                Value="SemiBold"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="1"/>
                            </Trigger>

                            <!-- Disable (nếu sau này cần) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#D1D5DB"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="AvatarEditButton">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nút tab bên trái -->
        <Style x:Key="NavItemStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="46"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="btn"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}"
                                Padding="10,0"
                                Height="{TemplateBinding Height}">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0"
                                        SnapsToDevicePixels="True">
                                <TextBlock x:Name="IconBlock"
                                           Text="👤"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Background" Value="#EEF2FF"/>
                            </Trigger>

                            <!-- Đang chọn -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="btn" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4F46E5" Offset="0"/>
                                            <GradientStop Color="#2563EB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="IconBlock" Property="Foreground" Value="White"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox bo tròn -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Border bo góc -->
                            <Border x:Name="border"
                            CornerRadius="14"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Placeholder -->
                            <TextBlock x:Name="placeholder"
                               Text="{TemplateBinding Tag}"
                               Foreground="#9CA3AF"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                            <!-- Nội dung thực -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="0,0"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- Hiện placeholder nếu rỗng -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Focus -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IntroTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="14">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0,6"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Button chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4F46E5" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btn"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputBorderFocusStyle" TargetType="Border">
            <!-- Mặc định -->
            <Setter Property="BorderBrush" Value="#CDD3D8"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Style.Triggers>
                <!-- Khi có focus bên trong -->
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#5A7CFF"/>
                    <!-- xanh biển -->
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <!-- NỀN TỔNG -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#EEF2FF" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                <GradientStop Color="#E0F2FE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SIDEBAR -->
            <Grid Grid.Row="0" Margin="20,20,20,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Thông tin cá nhân -->
                <RadioButton Grid.Column="0" x:Name="NavProfile"
                             Content="Thông tin cá nhân"
                             IsChecked="True"
                             Style="{StaticResource TabTextStyle}"/>

                <!-- Bảo mật -->
                <RadioButton Grid.Column="1" x:Name="NavSecurity"
                             Margin="30,0,0,0"
                             Content="Bảo mật"
                             Style="{StaticResource TabTextStyle}"/>
            </Grid>

        <!-- NỘI DUNG BÊN DƯỚI -->
        <Border Grid.Row="1"
        Style="{StaticResource CardStyle}"
        Margin="20,10,20,20">
            <Grid>

                <!--THÔNG TIN CÁ NHÂN-->
                <StackPanel x:Name="ProfilePanel"
                    Visibility="{Binding ElementName=NavProfile, Path=IsChecked, Converter={StaticResource BoolToVis}}">

                    <!-- HEADER PROFILE -->
                    <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,18"
                        VerticalAlignment="Center">
                        <Border Width="50" Height="50"
                        CornerRadius="16"
                        Background="#4F46E5"
                        Margin="0,0,12,0">
                            <Icon:PackIconMaterial Kind="Account"
                               Width="22" Height="22"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="Thông tin cá nhân"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#111827"/>
                            <TextBlock Text="Cập nhật thông tin và ảnh đại diện"
                               FontSize="16"
                               Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- BLOCK: AVATAR + TÊN -->
                    <Border CornerRadius="18"
                    Background="#F3F4FF"
                    Padding="16"
                    Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar + nút đổi ảnh -->
                            <Grid Width="70" Height="70">
                                <!-- Avatar tròn -->
                                <Ellipse Width="70"
                                 Height="70"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/anh/karina.jpg"
                                            Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <!-- Button đổi ảnh -->
                                <Button Width="28"
                                Height="28"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="-3"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Thay đổi ảnh đại diện"
                                Style="{StaticResource AvatarEditButton}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="15"
                                            Background="{TemplateBinding Background}">
                                                <Icon:PackIconMaterial Kind="Camera"
                                                               Width="14"
                                                               Height="14"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Thông tin nhanh -->
                            <StackPanel Grid.Column="1"
                                Margin="16,4,0,0"
                                VerticalAlignment="Center">
                                <TextBlock x:Name="TxtDisplayName"
                                   Text="Đang tải.."
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                                <TextBlock x:Name="TxtEmail"
                                   FontSize="16"
                                   Foreground="#6B7280"
                                   Margin="0,2,0,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- FORM HÀNG 1: Tên tài khoản + Email -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Tên tài khoản"
                               FontSize="16"
                               Foreground="#6B7280"
                               FontWeight="SemiBold"
                               Margin="5,0,0,4"/>
                            <TextBox x:Name="TxtUsername"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Tag="Nhập tên tài khoản..."
                             Text=""/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Email"
                               FontSize="16"
                               Foreground="#6B7280"
                               FontWeight="SemiBold"
                               Margin="5,0,0,4"/>
                            <TextBox Style="{StaticResource RoundedTextBoxStyle}"
                             Tag="Nhập email..."
                             Text="" x:Name="TxtEmailCT"/>
                        </StackPanel>
                    </Grid>

                    <!-- FORM HÀNG 2: Họ tên + Mô tả -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Họ và tên"
                               FontSize="16"
                               Foreground="#6B7280"
                               FontWeight="SemiBold"
                               Margin="5,0,0,4"/>
                            <TextBox x:Name="TxtFullName"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Tag="Nhập họ và tên..."
                             Text=""/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Mô tả"
                               FontSize="16"
                               Foreground="#6B7280"
                               FontWeight="SemiBold"
                               Margin="5,0,0,4"/>
                            <TextBox Style="{StaticResource RoundedTextBoxStyle}" 
                             Tag= "..."
                             Text="" x:Name="TxtDescription"
                             IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>

                    <!-- Nút lưu -->
                    <Button x:Name="BtnSaveProfile"
                    Content="Lưu thay đổi" Margin="0,20,0,0"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center" Click="BtnSaveProfile_Click_1"/>
                </StackPanel>



                <!-- ========== BẢO MẬT ========== -->
                <StackPanel x:Name="SecurityPanel"
                    Visibility="{Binding ElementName=NavSecurity, Path=IsChecked, Converter={StaticResource BoolToVis}}">

                    <!-- HEADER SECURITY -->
                    <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,18"
                        VerticalAlignment="Center">
                        <Border Width="50" Height="50"
                                CornerRadius="16"
                                Background="#DC2626"
                                Margin="0,0,12,0">
                            <Icon:PackIconMaterial Kind="Lock"
                                                   Width="22" Height="22"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="Bảo mật"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                            <TextBlock Text="Quản lý mật khẩu"
                                       FontSize="16"
                                       Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- ĐỔI MẬT KHẨU -->
                        <StackPanel>
                        <TextBlock Text="Đổi mật khẩu"
                               FontWeight="SemiBold"
                               FontSize="22"
                               Margin="0,10,0,25"/>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Mật khẩu hiện tại"
                                       FontSize="18"
                                       Foreground="#6B7280"
                                       FontWeight="SemiBold"
                                       Margin="5,0,0,4"/>

                            <Border Background="#F8FAFC"
                                    CornerRadius="10"
                                    Padding="10,6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    Style="{StaticResource InputBorderFocusStyle}">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- PasswordBox nhập thật -->
                                    <PasswordBox x:Name="CurPwdPasswordBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="16"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 PasswordChanged="CurPwdPasswordBox_PasswordChanged"/>

                                    <!-- Text hiển thị khi bật mắt -->
                                    <TextBox x:Name="CurPwdVisibleBox"
                                                     Grid.Column="0"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="16"
                                                     Padding="2"
                                                     VerticalAlignment="Center"
                                                     Foreground="#1F2937"
                                                     Visibility="Collapsed"
                                                     TextChanged="CurPwdVisibleBox_TextChanged"/>

                                    <!-- Placeholder -->
                                    <TextBlock x:Name="CurPwdPlaceholder"
                                               Grid.Column="0"
                                               Text=" Nhập mật khẩu"
                                               FontSize="16"
                                               Foreground="#6B7280"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False"/>

                                    <!-- Icon mắt -->
                                    <Image x:Name="CurPwdEyeIcon"
                                                   Grid.Column="1"
                                                   Source="/anh/eyeclose.png"
                                                   Width="20" Height="20"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"
                                                   Cursor="Hand"
                                                   MouseLeftButtonUp="CurPwd_ToggleEye"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Mật khẩu mới"
                                           FontSize="18"
                                           Foreground="#6B7280"
                                           FontWeight="SemiBold"
                                           Margin="5,0,0,4"/>

                                <Border Background="#F8FAFC"
                                        CornerRadius="10"
                                        Padding="10,6"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Style="{StaticResource InputBorderFocusStyle}">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- PasswordBox nhập thật -->
                                        <PasswordBox x:Name="NewPwdPasswordBox"
                                                     Grid.Column="0"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="16"
                                                     Padding="2"
                                                     VerticalAlignment="Center"
                                                     Foreground="#1F2937"
                                                     PasswordChanged="NewPwdPasswordBox_PasswordChanged"/>

                                        <!-- TextBox hiển thị khi bật mắt -->
                                        <TextBox x:Name="NewPwdVisibleBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="16"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 Visibility="Collapsed"
                                                 TextChanged="NewPwdVisibleBox_TextChanged"/>

                                        <!-- Placeholder -->
                                        <TextBlock x:Name="NewPwdPlaceholder"
                                                   Grid.Column="0"
                                                   Text=" Nhập mật khẩu mới"
                                                   FontSize="16"
                                                   Foreground="#6B7280"
                                                   VerticalAlignment="Center"
                                                   Margin="2,0,0,0"
                                                   IsHitTestVisible="False"/>

                                        <!-- Icon mắt -->
                                        <Image x:Name="NewPwdEyeIcon"
                                               Grid.Column="1"
                                               Source="/anh/eyeclose.png"
                                               Width="20" Height="20"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               Cursor="Hand"
                                               MouseLeftButtonUp="NewPwd_ToggleEye"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Xác nhận mật khẩu"
                                           Foreground="#6B7280"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>

                                <Border Background="#F8FAFC"
                                        CornerRadius="10"
                                        Padding="10,6"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,5,0,20" Style="{StaticResource InputBorderFocusStyle}">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- PasswordBox nhập thật -->
                                        <PasswordBox x:Name="ConfirmPwdPasswordBox"
                                                             Grid.Column="0"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             FontSize="16"
                                                             Padding="2"
                                                             VerticalAlignment="Center"
                                                             Foreground="#1F2937"
                                                             PasswordChanged="ConfirmPwdPasswordBox_PasswordChanged"/>

                                        <!-- TextBox hiển thị khi bật mắt -->
                                        <TextBox x:Name="ConfirmPwdVisibleBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="16"
                                                 Padding="2"
                                                 VerticalAlignment="Center"
                                                 Foreground="#1F2937"
                                                 Visibility="Collapsed"
                                                 TextChanged="ConfirmPwdVisibleBox_TextChanged"/>

                                        <!-- Placeholder -->
                                        <TextBlock x:Name="ConfirmPwdPlaceholder"
                                                   Grid.Column="0"
                                                   Text=" Nhập lại mật khẩu"
                                                   FontSize="16"
                                                   Foreground="#6B7280"
                                                   VerticalAlignment="Center"
                                                   Margin="2,0,0,0"
                                                   IsHitTestVisible="False"/>

                                        <!-- Icon mắt -->
                                        <Image x:Name="ConfirmPwdEyeIcon"
                                               Grid.Column="1"
                                               Source="/anh/eyeclose.png"
                                               Width="20" Height="20"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"
                                               Cursor="Hand"
                                               MouseLeftButtonUp="ConfirmPwd_ToggleEye"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            </Grid>

                        <Button x:Name="BtnChangePassword" Click="BtnChangePassword_Click"
                            Content="Cập nhật"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Center"/>
                        </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
