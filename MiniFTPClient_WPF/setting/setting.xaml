<Page x:Class="MiniFTPClient_WPF.setting.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="1100"
      Title="setting">

    <Page.Resources>

        <!-- Converter: dùng để ẩn/hiện panel theo IsChecked -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Card trắng bo góc + shadow nhẹ -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="24"
                                      ShadowDepth="4"
                                      Opacity="0.18"
                                      Color="#55000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TAB CHỮ HIỆN ĐẠI, GẠCH CHÂN DÀI BẰNG CHỮ -->
        <Style x:Key="TabTextStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent"
                        Padding="0,4,0,4">
                            <StackPanel>
                                <!-- CHỮ -->
                                <TextBlock x:Name="txt"
                                   Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextTrimming="CharacterEllipsis"/>

                                <!-- GẠCH CHÂN: RỘNG = CHỮ -->
                                <Border x:Name="underline"
                                Height="2"
                                Margin="0,4,0,0"
                                CornerRadius="1"
                                Background="#2563EB"
                                Opacity="0"
                                HorizontalAlignment="Left"
                                Width="{Binding ActualWidth, ElementName=txt}"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover: chữ đậm hơn, gạch mờ -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#111827"/>
                                <Setter TargetName="txt"
                                Property="FontWeight"
                                Value="SemiBold"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="0.35"/>
                            </Trigger>

                            <!-- Được chọn: chữ xanh + gạch chân rõ -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#2563EB"/>
                                <Setter TargetName="txt"
                                Property="FontWeight"
                                Value="SemiBold"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="1"/>
                            </Trigger>

                            <!-- Disable (nếu sau này cần) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="txt"
                                Property="Foreground"
                                Value="#D1D5DB"/>
                                <Setter TargetName="underline"
                                Property="Opacity"
                                Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Nút tab bên trái -->
        <Style x:Key="NavItemStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="46"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="btn"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}"
                                Padding="10,0"
                                Height="{TemplateBinding Height}">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0"
                                        SnapsToDevicePixels="True">
                                <TextBlock x:Name="IconBlock"
                                           Text="👤"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Background" Value="#EEF2FF"/>
                            </Trigger>

                            <!-- Đang chọn -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="btn" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4F46E5" Offset="0"/>
                                            <GradientStop Color="#2563EB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="IconBlock" Property="Foreground" Value="White"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox bo tròn -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Border bo góc -->
                            <Border x:Name="border"
                            CornerRadius="14"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Placeholder -->
                            <TextBlock x:Name="placeholder"
                               Text="{TemplateBinding Tag}"
                               Foreground="#9CA3AF"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Collapsed"/>

                            <!-- Nội dung thực -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="0,0"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- Hiện placeholder nếu rỗng -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Focus -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IntroTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="14">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0,6"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Button chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4F46E5" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btn"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btn" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- NỀN TỔNG -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#EEF2FF" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="0.5"/>
                <GradientStop Color="#E0F2FE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Style="{StaticResource CardStyle}"
                Margin="20,20,20,400">
            <StackPanel>
                <TextBlock Text="Cài đặt"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#111827"/>
                <TextBlock Text="Quản lý tài khoản của bạn"
                           Margin="0,4,0,20"
                           Foreground="#6B7280"
                           FontSize="13"/>

                <!-- Thông tin cá nhân -->
                <RadioButton x:Name="NavProfile"
                             Content="Thông tin cá nhân"
                             IsChecked="True"
                             Style="{StaticResource TabTextStyle}"/>

                <!-- Bảo mật -->
                <RadioButton x:Name="NavSecurity"
             Content="Bảo mật"
             Style="{StaticResource TabTextStyle}"/>
            </StackPanel>
        </Border>

        <!-- NỘI DUNG BÊN PHẢI -->
        <Border Grid.Column="1"
                Style="{StaticResource CardStyle}"
                Margin="0,20,24,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Margin="0,0,0,18"
                            VerticalAlignment="Center">
                    <Border Width="44" Height="44"
                            CornerRadius="16"
                            Background="#4F46E5"
                            Margin="0,0,12,0">
                        <TextBlock Text="👤"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Thông tin cá nhân"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                        <TextBlock Text="Cập nhật thông tin và ảnh đại diện"
                                   FontSize="13"
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>

                <!-- PANEL THÔNG TIN CÁ NHÂN -->
                <ScrollViewer Grid.Row="1"
                              Visibility="{Binding ElementName=NavProfile, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                    <StackPanel Margin="0,0,0,10" >
                        <!-- Avatar + tên -->
                        <Border CornerRadius="18"
                                Background="#F3F4FF"
                                Padding="16"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Grid Width="110" Height="110">
                                    <Ellipse Fill="#E5E7EB"/>
                                    <TextBlock Text="Ảnh"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Border Width="32" Height="32"
                                            CornerRadius="16"
                                            Background="#2563EB"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,4,4">
                                        <TextBlock Text="📷"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"/>
                                    </Border>
                                </Grid>

                                <!-- Info -->
                                <StackPanel Grid.Column="1"
                                            Margin="16,4,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Nguyễn Văn A"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"/>
                                    <TextBlock Text="nguyenvana@example.com"
                                               FontSize="13"
                                               Foreground="#6B7280"
                                               Margin="0,2,0,6"/>

                                    <Border Background="#E0ECFF"
                                            CornerRadius="999"
                                            Padding="10,4"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✔"
                                                       Foreground="#2563EB"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="Tài khoản đã xác thực"
                                                       Foreground="#2563EB"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <StackPanel Margin="0,10,0,20">
                            <TextBlock Text="Tên tài khoản"
                                       FontSize="16"
                                       Foreground="#6B7280"
                                       FontWeight="SemiBold"    
                                       Margin ="5,0,0,4"/>
                            <TextBox Style="{StaticResource RoundedTextBoxStyle}"
                                     Tag="Nhập tên tài khoản..."
                                     Text="user1"/>
                        </StackPanel>

                        <!-- Form 2 cột -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Họ và tên"
                                           FontSize="16"
                                           Foreground="#6B7280"
                                           FontWeight="SemiBold"    
                                           Margin ="5,0,0,4"/>
                                <TextBox Style="{StaticResource RoundedTextBoxStyle}"
                                         Tag="Nhập họ và tên..."
                                         Text="Nguyễn Văn A"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Email"
                                           FontSize="16"
                                           Foreground="#6B7280"
                                           FontWeight="SemiBold"
                                           Margin="5,0,0,4"/>
                                <TextBox Style="{StaticResource RoundedTextBoxStyle}"
                                         Text="nguyenvana@example.com"
                                         Tag="Nhập email..."/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,10,0,20">
                            <TextBlock Text="Giới thiệu"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#6B7280"
                                       Margin="0,0,0,4"/>
                            <TextBox Style="{StaticResource IntroTextBoxStyle}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="Người dùng thông thường"
                                     Cursor="Arrow"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button Content="Lưu thay đổi"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Hủy"
                                    Height="42"
                                    MinWidth="90"
                                    BorderThickness="0"
                                    Background="#E5E7EB"
                                    Foreground="#374151"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- PANEL BẢO MẬT -->
                <ScrollViewer Grid.Row="1"
                              Visibility="{Binding ElementName=NavSecurity, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                    <StackPanel >
                        <TextBlock Text="Bảo mật tài khoản"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"
                                   Margin="0,0,0,10"/>

                        <!-- Đổi mật khẩu -->
                        <Border CornerRadius="18"
                                Background="#F9FAFB"
                                Padding="16"
                                Margin="0,0,0,14">
                            <StackPanel>
                                <TextBlock Text="Đổi mật khẩu"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>

                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Mật khẩu hiện tại"
                                               FontSize="13"
                                               Foreground="#6B7280"/>
                                    <PasswordBox Height="44" Padding="12,0"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Mật khẩu mới"
                                                   FontSize="13"
                                                   Foreground="#6B7280"/>
                                        <PasswordBox Height="44" Padding="12,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Xác nhận mật khẩu mới"
                                                   FontSize="13"
                                                   Foreground="#6B7280"/>
                                        <PasswordBox Height="44" Padding="12,0"/>
                                    </StackPanel>
                                </Grid>

                                <Button Content="Cập nhật mật khẩu"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>

                        <!-- 2FA -->
                        <Border CornerRadius="18"
                                Background="#F9FAFB"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Xác thực hai bước (2FA)"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="Thêm lớp bảo vệ bằng mã xác thực khi đăng nhập."
                                           FontSize="13"
                                           Foreground="#6B7280"
                                           Margin="0,0,0,10"/>

                                <ToggleButton Width="80"
                                              Height="32"
                                              Cursor="Hand"
                                              HorizontalAlignment="Left">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <Border x:Name="track"
                                                        CornerRadius="16"
                                                        Background="#E5E7EB"/>
                                                <Border x:Name="thumb"
                                                        Width="28"
                                                        Height="28"
                                                        CornerRadius="14"
                                                        Margin="2"
                                                        Background="White"
                                                        HorizontalAlignment="Left">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="6"
                                                                          Opacity="0.25"
                                                                          ShadowDepth="1"/>
                                                    </Border.Effect>
                                                </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="track" Property="Background" Value="#4F46E5"/>
                                                    <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</Page>
