<Page x:Class="MiniFTPClient_WPF.thungrac.Thungrac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MiniFTPClient_WPF.thungrac"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="thungrac">

    <Page.Resources>

        <!-- Card trắng bo góc + shadow -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.15"
                                  Color="#66000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <!-- 🎨 Màu đỏ Danger mặc định -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F97373" Offset="0"/>
                        <GradientStop Color="#EF4444" Offset="0.5"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                    CornerRadius="15"
                    Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FB6A6A" Offset="0"/>
                                            <GradientStop Color="#F14E4E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#D92727" Offset="0"/>
                                            <GradientStop Color="#B71C1C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SoftPillBorderStyle" TargetType="Border">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="BorderBrush" Value="#C7D2FE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Style.Triggers>

                <!-- Hover màu đậm hơn -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0EAFF"/>
                </Trigger>

            </Style.Triggers>
        </Style>



    </Page.Resources>

    <Grid Background="#F3F4FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
            Style="{StaticResource CardBorderStyle}"
            Margin="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Files đã xóa"
                                   Grid.Column="0"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="#111827"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>

                    <Border Style="{StaticResource SoftPillBorderStyle}" Grid.Column="1">
                        <TextBlock     x:Name="TxtFileCount"
                                       Text="0 file"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#4F46E5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                    </Border>

                </Grid>

                <Border Grid.Row="1" Background="#EFF2F7" BorderThickness="1" BorderBrush="LightGray" CornerRadius="20" Padding="12,8" VerticalAlignment="Center" MinWidth="280" HorizontalAlignment="Left" Width="280" Margin="0,15,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Icon:PackIconMaterial Grid.Column="0" Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center" Foreground="#6B7280" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"  x:Name="SearchBox"  Background="Transparent"  BorderThickness="0" Padding="2" VerticalAlignment="Center" FontSize="14" Foreground="#1F2937" Text="" MinWidth="200"  Cursor="IBeam" HorizontalAlignment="Stretch" TextChanged="SearchBox_TextChanged"/>
                        <TextBlock Grid.Column="1" x:Name="SearchPlaceholder" Text=" Tìm kiếm..." FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="2,0,0,0" IsHitTestVisible="False"/>
                    </Grid>
                </Border>
                <Button Grid.Row="1" Style="{StaticResource DangerButtonStyle}" x:Name="BtnEmptyTrash" Click="BtnEmptyTrash_Click" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Icon:PackIconMaterial Kind="DeleteOutline" VerticalAlignment="Center" Width="20" Height="20"/>
                        <TextBlock Text=" Dọn dẹp"  FontSize="18" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <DataGrid Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Grid.Row="2" 
                          x:Name="filedatagrid" MouseLeftButtonUp="filedatagrid_MouseLeftButtonUp">
                        
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False"
                        Width="auto"
                        Binding="{Binding IsSelected, Mode=TwoWay}">
                            <DataGridCheckBoxColumn.Header>
                                <CheckBox x:Name="SelectAllCheckBox"
                                  Checked="SelectAllCheckBox_Checked"
                                  Unchecked="SelectAllCheckBox_Unchecked"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>


                        <DataGridTemplateColumn Header="Tên file" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTextColumn Header="Đường dẫn gốc" IsReadOnly="True" Width="*" Binding="{Binding OriginalPath}"/>
                        <DataGridTextColumn Header="Ngày xóa" IsReadOnly="True" Width="*" Binding="{Binding DeletedDate, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>
                        <DataGridTextColumn Header="Kích thước" IsReadOnly="True" Width="*" Binding="{Binding Size}"/>

                        <DataGridTemplateColumn Header="Thao tác" IsReadOnly="True" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridEditButton}" Click="BtnRestore_Click">
                                            <Icon:PackIconMaterial Kind="Refresh" Width="12" Height="12" VerticalAlignment="Center"/>
                                        </Button>

                                        <Button Style="{StaticResource gridRemoveButton}" Margin="5 0 0 0" Click="BtnPermanentDelete_Click">
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Width="12" Height="12" VerticalAlignment="Center"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
