<Page x:Class="MiniFTPClient_WPF.tinnhan.Tinnhan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:MiniFTPClient_WPF.tinnhan"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F9FAFB"
      Title="tinnhan">

    <Page.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="0:0:0.25" />
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="20" To="0"
                         Duration="0:0:0.25" />
        </Storyboard>

        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ContentPresenter Margin="4,0,0,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="White"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <TextBlock Text=" ▼"
                                           Margin="4,0,0,0"
                                           Foreground="#6B7280"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TagChip" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
        </Style>

        <Style x:Key="PrimaryDarkButton" TargetType="Button">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#020617"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Icon:PackIconMaterial Kind="DownloadOutline"
                                                       Width="18" Height="18"
                                                       Margin="0,0,6,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#111827"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AcceptButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#16A34A"/>
            <Setter Property="BorderBrush" Value="#16A34A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="✓" Margin="0,0,6,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#ECFDF3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeclineButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#DC2626"/>
            <Setter Property="BorderBrush" Value="#DC2626"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="✕" Margin="0,0,6,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FEF2F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#CBD5E1"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#60A5FA"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#60A5FA" BlurRadius="8" ShadowDepth="0" Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Margin="16" Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tabs -->
        <Border Grid.Row="0"
                Background="#F3F4F6"
                CornerRadius="999"
                Padding="4"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:Name="TabReceived"
                              Grid.Column="0"
                              Style="{StaticResource TabButtonStyle}"
                              IsChecked="True"
                              Click="TabReceived_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Icon:PackIconMaterial Kind="InboxArrowDownOutline"
                                               Width="18" Height="18"
                                               Margin="0,0,6,0"/>
                        <TextBlock Text="Tin đã nhận"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="TabSent"
                              Grid.Column="1"
                              Style="{StaticResource TabButtonStyle}"
                              IsChecked="False"
                              Click="TabSent_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Icon:PackIconMaterial Kind="SendOutline"
                                               Width="18" Height="18"
                                               Margin="0,0,6,0"/>
                        <TextBlock Text="Tin đã gửi"/>
                    </StackPanel>
                </RadioButton>
            </Grid>
        </Border>

        <!-- Search: Received -->
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                    <Border x:Name="SearchReceivedBorder" Grid.Column="0"
                     BorderBrush="LightGray" BorderThickness="1" Background="white"
                    CornerRadius="20" Padding="12,8" VerticalAlignment="Center"
                    MinWidth="280" HorizontalAlignment="Left" Width="280" Margin="0,0,0,10"
                    Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Grid.Column="0" Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center" Foreground="#6B7280" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                             x:Name="SearchBoxReceived"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="2"
                             VerticalAlignment="Center"
                             FontSize="14"
                             Foreground="#1F2937"
                             Text=""
                             MinWidth="200"
                             Cursor="IBeam"
                             HorizontalAlignment="Stretch"
                             TextChanged="SearchBoxReceived_TextChanged"
                             BorderBrush="Gray"/>
                            <TextBlock Grid.Column="1"
                               x:Name="SearchPlaceholderReceived"
                               Text=" Tìm kiếm"
                               FontSize="14"
                               Foreground="#6B7280"
                               VerticalAlignment="Center"
                               Margin="2,0,0,0"
                               IsHitTestVisible="False"/>
                        </Grid>
                    </Border>
                <StackPanel x:Name="FilterReceivedPanel"
                    Grid.Column="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,12"
                    HorizontalAlignment="Left"
                    Visibility="Visible">

                    <!-- Combo ngày nhận -->
                    <ComboBox x:Name="CbReceiveDateFilter"
                          Width="150"
                          Padding="8,4"
                          Margin="0,0,8,0"
                          FontSize="15"
                          HorizontalContentAlignment="Left">
                        <ComboBoxItem IsSelected="True" Content="Tất cả"/>
                        <ComboBoxItem IsSelected="True" Content="Hôm nay"/>
                        <ComboBoxItem IsSelected="True" Content="Trong 7 ngày"/>
                        <ComboBoxItem IsSelected="True" Content="Trong 30 ngày"/>
                    </ComboBox>

                    <!-- Combo dung lượng -->
                    <ComboBox x:Name="CbSenderFilter"
                          Width="150"
                          Padding="8,4"
                          FontSize="15"
                          HorizontalContentAlignment="Left">
                        <ComboBoxItem IsSelected="True" Content="Tất cả"/>
                        <ComboBoxItem IsSelected="True" Content="Nhỏ (&lt; 1MB)"/>
                        <ComboBoxItem IsSelected="True" Content="Trung bình (1 - 10MB)"/>
                        <ComboBoxItem IsSelected="True" Content="Lớn (&gt; 10MB)"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Search: Sent -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="SearchSentBorder" Grid.Column="0"
        BorderBrush="LightGray" BorderThickness="1" Background="white"
        CornerRadius="20" Padding="12,8" VerticalAlignment="Center"
        MinWidth="280" HorizontalAlignment="Left" Width="280" Margin="0,0,0,10"
        Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Icon:PackIconMaterial Grid.Column="0" Kind="Magnify" Width="18" Height="18" VerticalAlignment="Center" Foreground="#6B7280" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1"
                 x:Name="SearchBoxSent"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="2"
                 VerticalAlignment="Center"
                 FontSize="14"
                 Foreground="#1F2937"
                 Text=""
                 MinWidth="200"
                 Cursor="IBeam"
                 HorizontalAlignment="Stretch"
                 TextChanged="SearchBoxSent_TextChanged"
                 BorderBrush="Gray"/>
                    <TextBlock Grid.Column="1"
                   x:Name="SearchPlaceholderSent"
                   Text=" Tìm kiếm tin đã gửi..."
                   FontSize="14"
                   Foreground="#6B7280"
                   VerticalAlignment="Center"
                   Margin="2,0,0,0"
                   IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <StackPanel x:Name="FilterSentPanel"
                Grid.Column="2"
                Orientation="Horizontal"
                Margin="0,0,0,12"
                HorizontalAlignment="Left"
                Visibility="Visible">

                <!-- Combo ngày nhận -->
                <ComboBox x:Name="CbSentDateFilter"
                  Width="150"
                  Padding="8,4"
                  Margin="0,0,8,0"
                  FontSize="15"
                  HorizontalContentAlignment="Left">
                    <ComboBoxItem IsSelected="True" Content="Tất cả"/>
                    <ComboBoxItem IsSelected="True" Content="Hôm nay"/>
                    <ComboBoxItem IsSelected="True" Content="7 ngày trước"/>
                    <ComboBoxItem IsSelected="True" Content="Trong 30 ngày"/>
                </ComboBox>

                <!-- Combo dung lượng -->
                <ComboBox x:Name="CbSentFilter"
                  Width="180"
                  Padding="8,4"
                  FontSize="15"
                  HorizontalContentAlignment="Left">
                    <ComboBoxItem IsSelected="True" Content="Tất cả"/>
                    <ComboBoxItem IsSelected="True" Content="Nhỏ (&lt; 1MB)"/>
                    <ComboBoxItem IsSelected="True" Content="Trung bình (1 - 10MB)"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!--TIN ĐÃ NHẬN-->
        <Border x:Name="ReceivedPanel"
                Grid.Row="2"
                Background="#F9FBFF"
                CornerRadius="10"
                BorderBrush="#DBEAFE"
                BorderThickness="2"
                Padding="10"
                Margin="0,5,0,0"
                Visibility="Visible">

            <ScrollViewer VerticalScrollBarVisibility="Visible"
                          HorizontalScrollBarVisibility="Hidden"
                          PanningMode="VerticalOnly">

                <ItemsControl x:Name="ReceivedList">

                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            CornerRadius="12"
                                            Padding="12"
                                            Margin="5,0,5,12"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Icon:PackIconMaterial Kind="CalendarOutline"
                                                                       Width="18" Height="18"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <Separator Grid.Column="1"
                                                       Margin="16,0"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ItemCount, StringFormat='{}{0} tin nhắn'}"
                                                       Foreground="#6B7280"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="16"
                                    Padding="16"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="2"
                                    Margin="0,0,5,20">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Effect" Value="{x:Null}"/>

                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#3B82F6"
                                                                          BlurRadius="16"
                                                                          ShadowDepth="4"
                                                                          Opacity="0.35"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Effect" Value="{x:Null}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0"
                                                 Width="40" Height="40"
                                                 VerticalAlignment="Top">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarPath}"  Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Sender}"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"/>
                                            <TextBlock Text="đã nhận 1 file"
                                                       Foreground="#6B7280"
                                                       FontSize="13"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Time}"
                                                   Foreground="#6B7280"
                                                   VerticalAlignment="Top"
                                                   FontSize="13"/>
                                    </Grid>

                                    <Border Grid.Row="1"
                                            Background="#F9FBFF"
                                            CornerRadius="14"
                                            Padding="14"
                                            Margin="0,12,0,12"
                                            BorderBrush="#DBEAFE"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                    Width="40" Height="40"
                                                    CornerRadius="8"
                                                    Background="White"
                                                    BorderBrush="#E5E7EB"
                                                    BorderThickness="1"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                                <Icon:PackIconMaterial Kind="FilePdfBox"
                                                                       Width="22" Height="22"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="#2563EB"/>
                                            </Border>

                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,4"
                                                           FontSize="15"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Style="{StaticResource TagChip}">
                                                        <TextBlock Text="{Binding Size}"
                                                                   FontSize="13"
                                                                   Foreground="#374151"/>
                                                    </Border>
                                                    <Border Style="{StaticResource TagChip}">
                                                        <TextBlock Text="File"
                                                                   FontSize="13"
                                                                   Foreground="#374151"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <StackPanel Grid.Row="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <Button Style="{StaticResource PrimaryDarkButton}"
                                                Content="Tải về"
                                                Width="100"/>
                                        <Button Style="{StaticResource AcceptButton}"
                                                Content="Chấp nhận"
                                                Width="110"
                                                Margin="8,0,0,0"/>
                                        <Button Style="{StaticResource DeclineButton}"
                                                Content="Từ chối"
                                                Width="100"
                                                Margin="8,0,0,0"/>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Border>

        <!-- TIN ĐÃ GỬI -->
        <Border x:Name="SentPanel"
                Grid.Row="2"
                Background="#F9FBFF"
                CornerRadius="10"
                BorderBrush="#DBEAFE"
                BorderThickness="2"
                Padding="10"
                Margin="0,5,0,0"
                Visibility="Collapsed">

            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Hidden"
                          PanningMode="VerticalOnly">

                <ItemsControl x:Name="SentList">

                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="White"
                                            CornerRadius="12"
                                            Padding="12"
                                            Margin="5,0,5,12"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <Icon:PackIconMaterial Kind="CalendarOutline"
                                                                       Width="18" Height="18"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <Separator Grid.Column="1"
                                                       Margin="16,0"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ItemCount, StringFormat='{}{0} tin nhắn'}"
                                                       Foreground="#6B7280"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="16"
                                    Padding="16"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="2"
                                    Margin="0,0,5,20">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Effect" Value="{x:Null}"/>

                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#3B82F6"
                                          BlurRadius="16"
                                          ShadowDepth="4"
                                          Opacity="0.35"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Effect" Value="{x:Null}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>


                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0"
                                                 Width="40" Height="40"
                                                 VerticalAlignment="Top">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarPath}"  Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Sender}"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"/>
                                            <TextBlock Text="bạn đã gửi 1 file"
                                                       Foreground="#6B7280"
                                                       FontSize="13"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Time}"
                                                   Foreground="#6B7280"
                                                   VerticalAlignment="Top"
                                                   FontSize="13"/>
                                    </Grid>

                                    <Border Grid.Row="1"
                                            Background="#F9FBFF"
                                            CornerRadius="14"
                                            Padding="14"
                                            Margin="0,12,0,0"
                                            BorderBrush="#DBEAFE"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                    Width="40" Height="40"
                                                    CornerRadius="8"
                                                    Background="White"
                                                    BorderBrush="#E5E7EB"
                                                    BorderThickness="1"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                                <Icon:PackIconMaterial Kind="FilePdfBox"
                                                                       Width="22" Height="22"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"
                                                                       Foreground="#2563EB"/>
                                            </Border>

                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,4"
                                                           FontSize="15"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Style="{StaticResource TagChip}">
                                                        <TextBlock Text="{Binding Size}"
                                                                   FontSize="13"
                                                                   Foreground="#374151"/>
                                                    </Border>
                                                    <Border Style="{StaticResource TagChip}">
                                                        <TextBlock Text="File"
                                                                   FontSize="13"
                                                                   Foreground="#374151"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Border>

    </Grid>
</Page>
