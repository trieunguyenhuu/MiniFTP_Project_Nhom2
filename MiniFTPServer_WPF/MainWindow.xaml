<Window x:Class="MiniFTPServer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:MiniFTPServer_WPF"
        mc:Ignorable="d"
        Title="Mini FTP Server" 
        Height="720" Width="1280"
        MinWidth="900" MinHeight="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F4F6FF">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#F4F6FF"/>
        <SolidColorBrush x:Key="BgCard" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BgCardSoft" Color="#F9FAFF"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="AccentGreenSoft" Color="#6BD56C"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#7B61FF"/>
        <SolidColorBrush x:Key="DangerRed" Color="#FF4D4F"/>
        <SolidColorBrush x:Key="TextMain" Color="#1F2943"/>
        <SolidColorBrush x:Key="TextSub" Color="#4C5880"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9CA4C4"/>

        <!-- Card lớn -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" Opacity="0.22" ShadowDepth="4" Color="#C3D1FF"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card nhỏ thống kê -->
        <Style x:Key="SmallCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource BgCardSoft}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.16" ShadowDepth="3" Color="#D5DFFF"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút hiện đại (Start / Stop) -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="16">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1E8E42" Offset="0"/>
                                    <GradientStop Color="#0A622E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#DFE6ED"/>
                                <Setter Property="Foreground" Value="#AEB7D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="22"
                              ShadowDepth="2"
                              Color="#90A6FF"
                              Opacity="0.22"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút phụ (Stop) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="16">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#B81414" Offset="0"/>
                                    <GradientStop Color="#7A0A0A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F0F3FA"/>
                                <Setter Property="Foreground" Value="#BDC4DE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="22"
                              ShadowDepth="2"
                              Color="#90A6FF"
                              Opacity="0.22"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F4F6FF" Offset="0"/>
                <GradientStop Color="#F2F5FF" Offset="0.45"/>
                <GradientStop Color="#F7F8FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="8,4,0,12">
            <TextBlock Text="Server"
                           FontSize="36"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextMain}"/>
            <TextBlock Text="Điều khiển và giám sát hoạt động server"
                           Margin="0,6,0,0"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="20"/>
        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- CARD TRẠNG THÁI SERVER -->
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="LightGray" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề + trạng thái -->
                    <DockPanel>

                        <Grid Grid.Row="1" Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="45" Height="45" CornerRadius="12"
                                        Background="#FFECEF"
                                        VerticalAlignment="Center">
                                    <Icon:PackIconMaterial Kind="WifiOff"
                                               x:Name="iconServerStatus"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#FF6B81"
                                               Width="20" Height="20"/>
                                </Border>

                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Trạng Thái Server"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMain}"/>
                                    <TextBlock Text="Cập nhật theo thời gian thực"
                                               FontSize="14"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Column="2"
                                        VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" x:Name="ellipseServerStatus"
                                         Fill="{StaticResource DangerRed}"
                                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Offline" x:Name="txtServerStatus"
                                           Foreground="{StaticResource DangerRed}"
                                           FontSize="18"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </DockPanel>

                    <!-- Nội dung: thời gian & trạng thái -->
                    <Grid Grid.Row="1" Margin="0,20,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Thời gian hoạt động -->
                        <Border CornerRadius="16"
                                    Padding="14"
                                    Margin="0,0,8,0">

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <!-- nền tím rất nhạt -->
                                    <GradientStop Color="#F7F5FF" Offset="0"/>
                                    <!-- góc trên/phải hơi đậm hơn một chút -->
                                    <GradientStop Color="#E6E9FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Icon:PackIconMaterial Kind="ClockOutline" Width="16" Height="16" Foreground="DarkViolet"
                                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Thời gian hoạt động" Margin="8,0,0,0"
                                                   Foreground="DarkViolet"
                                                   FontSize="16"/>
                                </StackPanel>
                                <TextBlock     x:Name="txtUptime"
                                               Text="00:00:00"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMain}"/>
                            </StackPanel>
                        </Border>



                        <!-- Trạng thái -->
                        <Border Grid.Column="1"
                                    CornerRadius="16"
                                    Padding="14"
                                    Margin="8,0,0,0">

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#F3FFF7" Offset="0"/>
                                    <GradientStop Color="#DDFBEC" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Icon:PackIconMaterial Kind="Pulse" Width="16" Height="16" Foreground="DarkGreen"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="Trạng thái" Margin="8,0,0,0"
                                                   Foreground="DarkGreen"
                                                   FontSize="16"/>
                                </StackPanel>
                                <TextBlock     x:Name="lblStatus"
                                               Text="Offline"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DangerRed}"/>
                            </StackPanel>
                        </Border>

                        <!-- Số kết nối -->
                        <Border Grid.Column="2"
                                CornerRadius="16"
                                Padding="14"
                                Margin="8,0,0,0">

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#E7F8FF" Offset="0"/>
                                    <GradientStop Color="#D2F2FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Icon:PackIconMaterial Kind="AccountMultipleOutline" Width="16" Height="16"
                                            Foreground="DarkBlue" VerticalAlignment="Center"/>
                                    <TextBlock Text="Kết nối" Margin="10,0,0,0"
                                               Foreground="DarkBlue"
                                               FontSize="16"/>
                                </StackPanel>
                                <TextBlock x:Name="txtConnectionCount"
                                           Text="0"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- CARD ĐIỀU KHIỂN -->
            <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="LightGray" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Điều Khiển" Margin="0,5,0,0"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMain}"/>

                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <Button     x:Name="btnStart"
                                    Click="btnStart_Click"
                                    Style="{StaticResource ModernButton}"
                                    Content="▶   Khởi Động Server"
                                    Height="48"
                                    Margin="0,0,0,15"/>

                        <Button     x:Name="btnStop"
                                    Click="btnStop_Click"
                                    Style="{StaticResource SecondaryButton}"
                                    Content="■   Dừng Server"
                                    Height="44"
                                    IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== NHẬT KÝ HOẠT ĐỘNG ===== -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" BorderThickness="1" BorderBrush="LightGray" Margin="12,16,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header nhật ký -->
                <StackPanel Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="12"
                                Background="#FFC15A"
                                VerticalAlignment="Center">
                        <Icon:PackIconMaterial Kind="BookCheck" FontWeight="Bold" Width="24" Height="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="LightGoldenrodYellow"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Nhật Ký Hoạt Động"
                                       Foreground="{StaticResource TextMain}"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                        <TextBlock Text="Lịch sử các sự kiện của server"
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="1" Margin="0,5,0,0"
                        Background="#FFFFFF"
                        CornerRadius="12"
                        Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="12">         

                        <TextBox x:Name="logHoatDong"
                             Background="Transparent"
                             Foreground="{StaticResource TextSub}"
                             BorderThickness="0"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontSize="16"
                             FontFamily="Consolas"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
