<Window x:Class="MiniFTPServer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniFTPServer_WPF"
        mc:Ignorable="d"
        Title="Mini FTP Server" 
        Height="720" Width="1280"
        MinWidth="900" MinHeight="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#050814">

    <Window.Resources>
        <!-- Màu dùng chung -->
        <SolidColorBrush x:Key="BgDark" Color="Red"/>
        <SolidColorBrush x:Key="BgCard" Color="#151C2B"/>
        <SolidColorBrush x:Key="BgCardSoft" Color="#101726"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#25C36F"/>
        <SolidColorBrush x:Key="AccentGreenSoft" Color="#3ED884"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#6C5CE7"/>
        <SolidColorBrush x:Key="DangerRed" Color="#FF5C5C"/>
        <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSub" Color="#B4BAC8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#7E859A"/>

        <!-- Card lớn -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" Opacity="0.22" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card nhỏ thống kê -->
        <Style x:Key="SmallCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource BgCardSoft}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.15" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar hiện đại -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track"
                                   Maximum="{TemplateBinding Maximum}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="{TemplateBinding ViewportSize}">
                                <Track.Thumb>
                                    <Thumb Margin="0,2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border CornerRadius="4"
                                                        Background="#3B445A"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Width" Value="Auto"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Height" Value="Auto"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nút hiện đại (Start / Stop) -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14 10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#28C76F"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="4,0,4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20B563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#189454"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2A3140"/>
                                <Setter Property="Foreground" Value="#7E859A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" Opacity="0.4" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút phụ (Stop) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#181F30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.25" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#222A3C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#151B27"/>
                    <Setter Property="Foreground" Value="#5F6578"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#050814" Offset="0"/>
                <GradientStop Color="#061328" Offset="0.45"/>
                <GradientStop Color="#040818" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="8,4,0,12">
            <TextBlock Text="Server"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextMain}"/>
            <TextBlock Text="Điều khiển và giám sát hoạt động server"
                           Margin="0,6,0,0"
                           Foreground="{StaticResource TextMuted}"
                           FontSize="16"/>
        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- CARD TRẠNG THÁI SERVER -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tiêu đề + trạng thái -->
                    <DockPanel>

                        <Grid Grid.Row="1" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="40" Height="40" CornerRadius="12"
                                        Background="#1E2639"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="☰"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#9BA3C2"
                                               FontSize="18"/>
                                </Border>

                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Trạng Thái Server"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMain}"/>
                                    <TextBlock Text="Cập nhật theo thời gian thực"
                                               FontSize="12"
                                               Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        DockPanel.Dock="Right"
                                        VerticalAlignment="Center">
                                <Ellipse Width="10" Height="10"
                                         Fill="{StaticResource DangerRed}"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="Đã Dừng"
                                           Foreground="{StaticResource DangerRed}"
                                           FontSize="13"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </DockPanel>

                    <!-- Nội dung: thời gian & trạng thái -->
                    <Grid Grid.Row="1" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Thời gian hoạt động -->
                        <Border     Background="#121929"
                                    CornerRadius="16"
                                    Padding="14"
                                    Margin="0,0,8,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Ellipse Width="10" Height="10" Fill="#4F5466"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="Thời gian hoạt động" Margin="10,0,0,0"
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="13"/>
                                </StackPanel>
                                <TextBlock     x:Name="txtUptime"
                                               Text="00:00:00"
                                               FontSize="25"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMain}"/>
                            </StackPanel>
                        </Border>



                        <!-- Trạng thái -->
                        <Border Grid.Column="1"
                                    Background="#121929"
                                    CornerRadius="16"
                                    Padding="14"
                                    Margin="8,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Ellipse Width="10" Height="10" Fill="#4F5466"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="Trạng thái" Margin="10,0,0,0"
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="13"/>
                                </StackPanel>
                                <TextBlock     x:Name="lblStatus"
                                               Text="Offline"
                                               FontSize="25"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DangerRed}"/>
                            </StackPanel>
                        </Border>

                        <!-- Trạng thái -->
                        <Border Grid.Column="2"
                                Background="#121929"
                                CornerRadius="16"
                                Padding="14"
                                Margin="8,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <Ellipse Width="10" Height="10" Fill="#4F5466"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Kết nối" Margin="10,0,0,0"
                                               Foreground="{StaticResource TextMuted}"
                                               FontSize="13"/>
                                </StackPanel>
                                <TextBlock x:Name="txtConnectionCount"
                                           Text="0"
                                           FontSize="25"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource DangerRed}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- CARD ĐIỀU KHIỂN -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Điều Khiển"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMain}"/>

                    <StackPanel Grid.Row="1" Margin="0,18,0,0">
                        <Button     x:Name="btnStart"
                                    Click="btnStart_Click"
                                    Style="{StaticResource ModernButton}"
                                    Content="▶   Khởi Động Server"
                                    Height="48"
                                    Margin="0,0,0,10"/>

                        <Button     x:Name="btnStop"
                                    Click="btnStop_Click"
                                    Style="{StaticResource SecondaryButton}"
                                    Content="■   Dừng Server"
                                    Height="44"
                                    IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== NHẬT KÝ HOẠT ĐỘNG (TO, CÓ SCROLL) ===== -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="12,16,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header nhật ký -->
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="12"
                                Background="#1E2639"
                                VerticalAlignment="Center">
                        <TextBlock Text="🗎"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#9BA3C2"
                                       FontSize="18"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Nhật Ký Hoạt Động"
                                       Foreground="{StaticResource TextMain}"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                        <TextBlock Text="Lịch sử các sự kiện của server"
                                       Foreground="{StaticResource TextMuted}"
                                       FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Log list -->
                <Border Grid.Row="1" Margin="0,14,0,0"
                        Background="#101726"
                        CornerRadius="12"
                        Padding="12">

                    <TextBox x:Name="logHoatDong"
                             Background="Transparent"
                             Foreground="{StaticResource TextSub}"
                             BorderThickness="0"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontSize="13"
                             FontFamily="Consolas"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
